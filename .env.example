# Shopify Store Configuration
SHOPIFY_STORE_URL=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_admin_api_access_token

# Canvas Dimensions
CANVAS_WIDTH=2000
CANVAS_HEIGHT=2500

# Visual Settings
BACKGROUND_COLOR=#f3f3f4
SHADOW_OPACITY=0.18

# Processing Configuration
DRY_RUN=true
MAX_CONCURRENT_PROCESSES=5

# Image Processing Options
# Enable auto-trim to remove black/white letterboxing borders
ENABLE_AUTO_TRIM=true

# Enable background removal (Note: Sharp has limited capabilities)
# Set to false if your images already have transparent backgrounds
ENABLE_BACKGROUND_REMOVAL=false

# Optional: Webhook URL for notifications
# WEBHOOK_URL=https://your-webhook-url.com
