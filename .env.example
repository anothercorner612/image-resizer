# Shopify Store Configuration
SHOPIFY_STORE_URL=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_admin_api_access_token

# Canvas Dimensions
CANVAS_WIDTH=2000
CANVAS_HEIGHT=2500

# Visual Settings
BACKGROUND_COLOR=#f3f3f4
SHADOW_OPACITY=0.18
WEBP_QUALITY=90

# Processing Configuration
DRY_RUN=true
MAX_CONCURRENT_PROCESSES=5

# Image Processing Options (both enabled by default)
# Set to false to disable specific features

# Auto-trim: Removes black letterboxing borders
# ENABLE_AUTO_TRIM=false

# Background Removal: Uses local AI (U2Net model) for high-quality background removal
# Runs completely free on your server with no API costs or external requests
# The model downloads automatically on first run (~150MB)
# If background removal fails, falls back to basic Sharp processing
# ENABLE_BACKGROUND_REMOVAL=false

# Optional: Webhook URL for notifications
# WEBHOOK_URL=https://your-webhook-url.com
